    <style>
        /* Styling for better layout */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        /* Navigation Section */
        .nav-section {
            position: absolute;
            top: 0;
            width: 100%;
            padding: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;

            color: #fff;
        }

        .brand-logo {
            margin-right: 20px;
        }

        .brand-logo img {
            width: 110px;
            height: 80px;
          }

        .nav-section ul {
            display: flex;
            list-style-type: none;
        }

        .nav-section ul li {
            margin: 0 20px;
        }

        .nav-section ul a {
            color: #fff;
            text-decoration: none;
            font-weight: bold;
            transition: color 0.3s ease-in-out;
        }

        .nav-section ul a:hover {
            color: #ff6600;
        }

        /* Gallery Section */
        .gallery {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 15px;
            margin-top: 20px;
        }

        .gallery .single-img {
            overflow: hidden;
            position: relative;
        }

        .gallery .single-img img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        /* Footer Section */
        footer {
            background-color: #333;
            color: white;
            padding: 50px 0;
        }

        .contact-middle {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
        }

        .contact-middle div {
            flex: 1;
            padding: 15px;
        }

        .contact-middle div span {
            display: block;
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .contact-middle div p {
            margin: 0;
        }

        .contact-icon {
            font-size: 24px;
            color: #007bff;
            margin-right: 10px;
        }

        /* Responsive Styling */
        @media (max-width: 768px) {
            .nav-content {
                flex-direction: column;
                align-items: center;
            }

            .top-nav {
                margin-top: 10px;
            }

            .top-nav ul {
                flex-wrap: wrap;
                justify-content: center;
            }

            .top-nav ul li {
                margin: 5px 10px;
            }

            .gallery {
                grid-template-columns: repeat(2, 1fr);
            }

            .contact-middle {
                flex-direction: column;
            }

            .slider {
                height: 300px;
            }
        }

        @media (max-width: 576px) {
            .gallery {
                grid-template-columns: 1fr;
            }

            .slider {
                height: 200px;
            }
        }

        @media (max-width: 480px) {
            .slider {
                display: none;
            }
        }
    </style>
</head>
